import math

# Parte 1: Operaciones matemÃ¡ticas
def suma(a, b):
    return a + b

def resta(a, b):
    return a - b

def multiplicacion(a, b):
    return a * b

def division(a, b):
    if b != 0:
        return a / b
    else:
        return "Error: No se puede dividir entre cero."

def raiz_cuadrada(a):
    return math.sqrt(a)

def elevar_potencia(a, b):
    return a ** b
